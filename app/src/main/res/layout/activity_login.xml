<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F222D"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".LoginSystem.LoginActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="262dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        app:fontFamily="@font/maiden_orange"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:hint="@string/Email_Input"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="262dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        app:fontFamily="@font/maiden_orange"
        android:hint="@string/Password_Input"
        android:imeActionLabel="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="248dp"
        android:onClick="LoginButtonClicked"
        android:text="@string/Login_Button"
        app:fontFamily="@font/mystery_quest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/forgotPassword"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/forgotPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="241dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/signUpButton"
        android:layout_width="265dp"
        android:layout_height="31dp"

        android:layout_marginEnd="60dp"
        android:layout_marginBottom="192dp"
        android:longClickable="true"
        android:nestedScrollingEnabled="false"
        app:fontFamily="@font/maiden_orange"
        android:onClick="signUpButtonClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/signbutton"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="212dp"
        android:layout_height="35dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="140dp"
        android:background="#0F222D"
        android:onClick="forgotPasswordClick"
        android:text="@string/forgot_pas"
        android:textColor="#33FFFF"
        app:fontFamily="@font/mystery_quest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/loadingProgress"
        android:layout_width="148dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading" /><![CDATA[





    160dp"
        tools:layout_editor_absoluteY="267dp" />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>